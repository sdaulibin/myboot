<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.binginx.myboot.mapper.PersonMapper">
    <resultMap id="baseResultMap" type="com.binginx.myboot.model.Person">
        <result column="person_id" property="personId" jdbcType="INTEGER"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>


    <insert id="insert" useGeneratedKeys="true" keyProperty="personId">
        INSERT INTO t_person (age,name,address) VALUES (#{age,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{address,jdbcType=VARCHAR});
    </insert>

    <delete id="delete">
        DELETE FROM t_person WHERE person_id = #{personId,jdbcType=INTEGER};
    </delete>

    <select id="selectBypersonIds" resultMap="baseResultMap" parameterType="list">
        SELECT person_id,age,name,address FROM t_person where person_id in
        <foreach collection="list" item="personId" open="(" separator="," close=")">
            #{personId}
        </foreach>
        order by age desc;
    </select>
</mapper>